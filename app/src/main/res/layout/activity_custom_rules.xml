<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <!-- 标题栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/header_background"
        android:padding="16dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:contentDescription="返回" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/custom_rules_title"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:gravity="center" />

        <TextView
            android:id="@+id/btnHelp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/help"
            android:textSize="16sp"
            android:textColor="@color/primary"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:padding="8dp" />

    </LinearLayout>

    <!-- 规则定义区域 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 标签规则 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="@string/tag_label"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary" />

                <EditText
                    android:id="@+id/etTagBefore"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/before_label"
                    android:background="@drawable/edit_text_border"
                    android:padding="12dp"
                    android:layout_marginEnd="8dp" />

                <EditText
                    android:id="@+id/etTagAfter"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/after_label"
                    android:background="@drawable/edit_text_border"
                    android:padding="12dp" />

            </LinearLayout>

            <!-- 快递电话规则 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="@string/express_phone_label"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary" />

                <EditText
                    android:id="@+id/etPhoneBefore"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/before_label"
                    android:background="@drawable/edit_text_border"
                    android:padding="12dp"
                    android:layout_marginEnd="8dp" />

                <EditText
                    android:id="@+id/etPhoneAfter"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/after_label"
                    android:background="@drawable/edit_text_border"
                    android:padding="12dp" />

            </LinearLayout>

            <!-- 取件码规则 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="@string/pickup_code_label"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary" />

                <EditText
                    android:id="@+id/etCodeBefore"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/before_label"
                    android:background="@drawable/edit_text_border"
                    android:padding="12dp"
                    android:layout_marginEnd="8dp" />

                <EditText
                    android:id="@+id/etCodeAfter"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/after_label"
                    android:background="@drawable/edit_text_border"
                    android:padding="12dp" />

            </LinearLayout>

            <!-- 取件地址规则 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="@string/pickup_address_label"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary" />

                <EditText
                    android:id="@+id/etAddressBefore"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/before_label"
                    android:background="@drawable/edit_text_border"
                    android:padding="12dp"
                    android:layout_marginEnd="8dp" />

                <EditText
                    android:id="@+id/etAddressAfter"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/after_label"
                    android:background="@drawable/edit_text_border"
                    android:padding="12dp" />

            </LinearLayout>

            <!-- 短信输入区域 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="短信内容："
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/etSmsContent"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:hint="@string/sms_input_hint"
                android:background="@drawable/edit_text_border"
                android:padding="12dp"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:layout_marginBottom="16dp" />

            <!-- 解析结果区域 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/parse_result_label"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/edit_text_border"
                android:padding="12dp"
                android:layout_marginBottom="24dp">

                <TextView
                    android:id="@+id/tvTagResult"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="标签："
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tvPhoneResult"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="快递电话："
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tvCodeResult"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="取件码："
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tvAddressResult"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="取件地址："
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- 底部按钮 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@color/white">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnReset"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/btn_reset"
            android:textSize="16sp"
            android:padding="16dp"
            android:layout_marginEnd="8dp"
            app:cornerRadius="8dp"
            android:backgroundTint="@color/primary" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnUse"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/btn_use"
            android:textSize="16sp"
            android:padding="16dp"
            android:layout_marginStart="8dp"
            app:cornerRadius="8dp"
            android:backgroundTint="@color/primary" />

    </LinearLayout>

</LinearLayout> 